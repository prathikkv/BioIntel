# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/biointel

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=csv,xlsx,xls,pdf,txt

# Reports Configuration
REPORTS_DIR=/tmp/biointel_reports

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://biointel.ai

# Data Processing Limits
MAX_GENES=50000
MAX_SAMPLES=10000
MAX_PAPER_LENGTH=100000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TTL=3600

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Data Retention
DATA_RETENTION_DAYS=90

# API Configuration
API_V1_PREFIX=/api/v1

# Feature Flags
ENABLE_ANALYTICS=True
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True